<h1>Articles</h1>
<% @articles.each do |article| %>
  <%= link_to article_path(article) do  %>
    <h2><%= article.title %></h2>
  <% end %>
  <%= link_to article_path(article),
      method: :delete,
      data: { confirm: "Are you sure you want to delete #{article.title}?" } do %>
    <i class="fas fa-trash-alt"></i>
  <% end %>
<% end %>
<%= link_to new_article_path do %>
  <p>Add Article</p>
<% end %>
